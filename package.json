{
  "name": "nodejs-typescript-swc-pnpm-template",
  "version": "1.0.0",
  "engines": {
    "node": "v18.18.1",
    "vscode": "^1.22.0"
  },
  "packageManager": "pnpm@8.9.2",
  "type": "commonjs",
  "description": "A template repository for future projects",
  "main": "dist/src/index.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "build": "tsc -p ./tsconfig.json",
    "dev": "nodemon ./src/index.ts",
    "start": "pnpm build && node -r dotenv/config dist/src/index.js",
    "prepare": "husky install",
    "prepare-commit": "git-cz",
    "test": "jest"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.ts": "eslint"
  },
  "keywords": [
    "template",
    "pnpm",
    "nodejs",
    "typescript",
    "swc"
  ],
  "author": {
    "name": "Amalu Sajeev",
    "email": "amalu.sajeev.me@gmail.com",
    "url": "https://github.com/amalu-sajeev-me/"
  },
  "bugs": {
    "url": "https://github.com/amalu-sajeev-me/Nodejs-Typescript-esBuild-Pnpm-Template/issues"
  },
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@commitlint/cz-commitlint": "^18.0.0",
    "@swc/core": "^1.3.95",
    "@types/bcrypt": "^5.0.1",
    "@types/body-parser": "^1.19.4",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/mime": "^3.0.3",
    "@types/module-alias": "^2.0.3",
    "@types/morgan": "^1.9.7",
    "@types/multer": "^1.4.9",
    "@types/node": "^20.8.7",
    "@types/passport": "^1.0.14",
    "@types/passport-jwt": "^3.0.12",
    "@types/passport-local": "^1.0.37",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.52.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "module-alias": "^2.2.3",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "typescript-eslint-language-service": "^5.0.5"
  },
  "dependencies": {
    "@typegoose/typegoose": "^11.6.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cloudinary": "^1.41.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mime": "^3.0.0",
    "mongoose": "^7.6.3",
    "morgan": "^1.10.0",
    "multer": "1.4.5-lts.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pdf-lib": "^1.17.1",
    "pino": "^8.16.1",
    "pino-pretty": "^10.2.3",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.6.2",
    "tsyringe": "^4.8.0",
    "typera-express": "^2.4.4",
    "zod": "^3.22.4"
  },
  "_moduleAliases": {
    "@bin": "dist/bin",
    "@adapters": "dist/src/adapters",
    "@utils": "dist/src/utils",
    "@middlewares": "dist/src/middlewares",
    "@controllers": "dist/src/controllers",
    "@models": "dist/src/models",
    "@schemas": "dist/src/schemas",
    "@services": "dist/src/services",
    "@routers": "dist/src/routers",
    "@types-local": "dist/src/types"
  }
}
